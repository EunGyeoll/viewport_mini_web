<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.mycompany.viewport_mini_web.dao.BranchDao">

 	<!-- 시퀀스 넣기 -->
	<insert id="branch" parameterType="Branch">
		<selectKey keyProperty="bnum" order="BEFORE" resultType="int">
			select SEQ_BNUM.nextval from dual
		</selectKey>
		insert into branch(bnum, bname, baddress, binfo) 	
		values(#{bnum}, #{bname}, #{baddress} #{binfo})
	</insert>
	
	<select id="selectBranchAll" resultType="Branch"> <!-- board.xml에서 selectByBnum은 ..  -->
		select bnum, bname, baddress, binfo
		from branch <!-- sql 대소문자 구분 안해도됨 -->
		
	</select>
</mapper>